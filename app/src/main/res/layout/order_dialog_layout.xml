<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginBottom="10dp"
        android:text="Order entries by"/>
    <com.adyrsoft.soul.ui.GridRadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="2"
        android:id="@+id/radio_group">
            <TextView android:text="@string/order_field_label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:text="@string/order_field_label_extension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/name_asc"
                android:text="A+"/>
            <RadioButton
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Ext+"
                android:id="@+id/ext_asc"/>
            <RadioButton
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="A-"
                android:id="@+id/name_desc"/>
            <RadioButton
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Ext-"
                android:id="@+id/ext_desc"/>

    </com.adyrsoft.soul.ui.GridRadioGroup>
</LinearLayout>